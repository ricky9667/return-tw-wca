{
    "manifest_version": 3,
    "name": "Return Taiwan WCA",
    "version": "1.1",
    "description": "Brings back Taiwan for WCA webpages",
    "permissions": ["activeTab"],
    "content_scripts": [
        {
            "matches": ["https://*.worldcubeassociation.org/*"],
            "css": ["styles.css"],
            "js": ["content.js"]
        }
    ],
    "icons": {
        "128": "./img/icon.png"
    },
    "browser_specific_settings": {
        "gecko": {
            "id": "return-taiwan-wca@ricky-hu.com"
        },
        "gecko_android": {
            "strict_min_version": "113.0"
        }
    }
}
